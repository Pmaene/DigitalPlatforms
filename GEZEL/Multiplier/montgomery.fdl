dp adder_dp (in sel : ns(1); in a, b : ns(1026); out s: ns(1027)) {
    sig b_eff : ns(1026);

    always {
        b_eff = sel == 1 ? (~b + 1) : b;
	    s = a + b_eff;
    }
}

dp montgomery_dp (in a, b, m : ns(1024); out r : ns(1027))
{
    reg counter : ns(11);
    reg r_reg   : ns(1027);
    reg a_reg   : ns(1024);

    sig r_tmp   : ns(1027);
    sig sel     : ns(1);
    sig x       : ns(1026);
    sig y       : ns(1026);

    use adder_dp(sel, x, y, r_tmp);

    sfg init {
	    counter = 0;
	    r = 0;
	    r_reg = 0;
        
        x = 0;
        y = 0;
        sel = 0;

        a_reg = a;
    }

    sfg loop {
    }

    sfg count_inc {
	    counter = counter + 1;
        a_reg = a_reg >> 1;
    }

    sfg count_rst {
	    counter = 0;
    }

    sfg sum {
        x = r_reg;
        y = a_reg[0] == 0 ? 0 : b;
        sel = 0;
        r_reg = r_tmp;
    }

    sfg equal_to_zero {
        sel = 0;
        x = 0;
        y = 0;
	    r_reg = r_reg >> 1;
    }

    sfg not_equal_to_zero {
        sel = 0;
        x = r_reg;
        y = m;
	    r_reg = r_tmp >> 1;
    }

    sfg overflow_check {
        sel = 1;
        x = r_reg;
        y = r_reg >= m ? m : 0;
        r_reg = r_tmp;
    }

    sfg stop {
        sel = 0;
        x = 0;
        y = 0;
        r = r_reg;

        $display("A: ", $dec, a, " B: ", $dec, b, " M: ", $dec, m, " R: ", $dec, r);
	    $finish;
    }

    sfg reset_r {
        r = 0;
    }
}

fsm montgomery (montgomery_dp)
{
    initial init;
    state loop, stop, if_else;

    @init	    (init) -> loop;
    @loop	    if (counter >= 1024) then
			        (count_rst, overflow_check, reset_r) -> stop;
		        else
                    (sum, reset_r) -> if_else;
    @if_else    if (r_reg[0] == 0) then
			        (equal_to_zero, count_inc, reset_r) -> loop;
		        else 
			        (not_equal_to_zero, count_inc, reset_r) -> loop;
    @stop       (stop) -> stop;
}

